{
  "env": { "node": true, "es6": true },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "error",
    "no-console": "error",
    "no-unused-expressions": [2, { "allowTernary": true }],
    "no-underscore-dangle": "off",
    "no-trailing-spaces": ["error", { "skipBlankLines": false }],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0, "maxEOF": 0 }]
  },
  "globals": {
    "log": true,
    "chars": true,
    "ashes": true,
    "TOTAL_COINS": true,
    "TRANSACTION_THRESHOLD": true,
    "VALIDATOR_FEE": true,
    "VALIDATOR_STAKE_REQUIREMENT": true,
    "TRANSACTION_FEE_MIN": true,
    "TRANSACTION_FEE_MAX": true,
    "TRANSACTION_FEE_BURN": true,
    "TRANSACTION_FEE_DONATION": true,
    "TRANSACTION_FEE_STORAGE": true
  }
}
